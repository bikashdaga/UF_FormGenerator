{% import "FormGenerator/macros/bool.twig" as bool %}
{% import "FormGenerator/macros/textarea.twig" as textarea %}
{% import "FormGenerator/macros/number.twig" as number %}
{% import "FormGenerator/macros/select.twig" as select %}
{% import "FormGenerator/macros/text.twig" as text %}
{% import "FormGenerator/macros/hidden.twig" as hidden %}
{% import "FormGenerator/macros/alert.twig" as alert %}

{% for name,input in fields %}
	{% if input.type == "hidden" %}
	    {{ hidden.generate(name, input) }}
    {% elseif input.type == "alert" %}
        {{ alert.generate(name, input) }}
	{% else %}
    	{% if not input.hidden %}
        <div class="form-group has-feedback">
            {% if formLayout == 'horizontal' %}<label for="{{input.id}}" class="col-sm-2 control-label">{% else %}<label for="{{input.id}}">{% endif %}
                {% if input.label %}{{translate(input.label)}}{% else %}&nbsp;{% endif %}
            </label>
            {% if formLayout == 'horizontal' %}<div class="col-sm-10">{% endif %}
                {% if input.type == "textarea" %}
                    {{ textarea.generate(name, input) }}
        		{% elseif input.type == "bool" %}
                    {{ bool.generate(name, input) }}
                {% elseif input.type == "number" %}
                    {{ number.generate(name, input) }}
                {% elseif input.type == "select" %}
                    {{ select.generate(name, input) }}
                {% else %}
                    {{ text.generate(input) }}
                {% endif %}
            {% if formLayout == 'horizontal' %}</div>{% endif %}
        </div>
        {% endif %}
    {% endif %}
{% endfor %}